{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "lib": [
      "es2015",
      "dom",
      "webworker"
    ],
    "types": [
      "node",
      "offscreencanvas"
    ],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
